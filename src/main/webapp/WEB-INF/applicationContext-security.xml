<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.2.xsd">
    <http auto-config='true'>
        <intercept-url pattern="/admin/**" access="ROLE_admin" />
        <form-login login-page="/public/login.xhtml"
                            always-use-default-target="true" default-target-url="/public/index.xhtml"
                            authentication-failure-url="/public/login.xhtml?login_error=1" />
        <logout logout-success-url="/public/login.xhtml" />
        <remember-me />
    </http>
    <authentication-manager>
        <authentication-provider>
            <jdbc-user-service data-source-ref="hibernateDataSource"
                                           users-by-username-query="SELECT pes_login, pes_senha, 'true' as enable
															 FROM pessoa
															 WHERE pes_login = ? "
                                           authorities-by-username-query="SELECT pes_login, nivel
														FROM pessoa
														WHERE pes_login = ? " />
        </authentication-provider>
    </authentication-manager>
</beans:beans>